{
    "identifier": "org.clayden.R-nova",
    "name": "R-Nova",
    "organization": "Jon Clayden",
    "description": "An extension providing syntax definitions for the R language and R Markdown, and language server integration.",
    "version": "0.1",
    "categories": ["languages"],
    
    "main": "main.js",
    
    "entitlements": {
        "process": true,
        "filesystem": "readonly"
    },
    
    "config": [
        {
            "key": "r.executable-path",
            "title": "Path to R executable",
            "type": "path",
            "placeholder": "/usr/local/bin/R"
        }
    ]
}
